{
    "name": "maginium/meta-package",
    "description": "A meta-package that bundles core modules for the Maginium framework.",
    "type": "metapackage",
    "license": "MIT",
    "authors": [
        {
            "name": "Maginium",
            "role": "Technical Support",
            "email": "support@maginium.com",
            "homepage": "https://www.maginium.com"
        }
    ],
    "support": {
        "email": "support@maginium.com",
        "issues": "https://www.maginium.com/issues",
        "docs": "https://docs.maginium.com",
        "source": "https://github.com/maginium/meta-package"
    },
    "require": {
        "php": ">=8.1",
        "maginium/module-backend": "^1.0",
        "maginium/module-reports": "^1.0",
        "maginium/module-framework": "^1.0",
        "maginium/module-foundation": "^1.0",
        "maginium/module-composer-patch": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.0",
        "psalm/phar": "^5.0"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "platform-check": true
    },
    "scripts": {
        "test": "phpunit",
        "lint": [
            "phpcs",
            "php-cs-fixer fix --dry-run"
        ],
        "fix-code": "php-cs-fixer fix",
        "analyze": "psalm",
        "post-install-cmd": [
            "@test",
            "@lint",
            "@analyze"
        ],
        "post-update-cmd": [
            "@test",
            "@lint",
            "@analyze"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}